<h1><%= @post.title %></h1>
<% if user_signed_in? %>
  <% user = User.find(@post.user_id)%>
  <h3>By, <%= user.username %></h3>
<% else %>
  <h3>By, Anonymous</h3>
<% end %>
<p><%= @post.post_content %></p>
<% if user_signed_in? %>
  <% if current_user.id == @post.user_id%>
    <%= link_to "Edit your post",edit_post_path(@post) %>
    <%= link_to "Delete your post",post_path(@post),method: :delete %>
  <% end %>
<% end %>
<%= link_to "Back to root path",root_path %>